# Application Configuration
APP_NAME=Zimrate                  # The name of your application
APP_ENV=local                     # Environment (local, production, staging, testing)
APP_KEY=                          # Application encryption key, generate with 'php artisan key:generate'
APP_DEBUG=true                    # Enable debug mode (set to false in production)
APP_URL=http://localhost          # Base URL of your application

# Localization Settings
APP_LOCALE=en                     # Default application locale
APP_FALLBACK_LOCALE=en            # Fallback locale if translation is missing
APP_FAKER_LOCALE=en_US            # Locale for generating fake data

# Maintenance Mode Settings
APP_MAINTENANCE_DRIVER=file       # Driver for maintenance mode (file or database)
# APP_MAINTENANCE_STORE=database  # Storage for maintenance mode if using database driver

# PHP Server Configuration
PHP_CLI_SERVER_WORKERS=4          # Number of PHP CLI server workers

# Security Settings
BCRYPT_ROUNDS=12                  # Number of rounds for bcrypt hashing (higher is more secure but slower)

# Logging Configuration
LOG_CHANNEL=stack                 # Log channel (stack, single, daily, slack, etc.)
LOG_STACK=single                  # Channels to stack if using stack channel
LOG_DEPRECATIONS_CHANNEL=null     # Channel for deprecation notices
LOG_LEVEL=debug                   # Minimum log level (debug, info, notice, warning, error, critical, alert, emergency)

# Database Configuration
DB_CONNECTION=mysql                # Database driver (mysql, pgsql, sqlite, sqlsrv)
DB_HOST=127.0.0.1                 # Database host (use 'db' for Docker)
DB_PORT=3306                      # Database port
DB_DATABASE=zimrate               # Database name
DB_USERNAME=root                  # Database username
DB_PASSWORD=                      # Database password

# Session Configuration
SESSION_DRIVER=database           # Session storage driver (file, cookie, database, redis, memcached, array)
SESSION_LIFETIME=120              # Session lifetime in minutes
SESSION_ENCRYPT=false             # Encrypt session data
SESSION_PATH=/                    # Session cookie path
SESSION_DOMAIN=null               # Session cookie domain

# Application Services
BROADCAST_CONNECTION=log          # Broadcasting connection
FILESYSTEM_DISK=local             # Default filesystem disk
QUEUE_CONNECTION=database         # Queue connection (sync, database, redis, etc.)

# Cache Configuration
CACHE_STORE=database              # Cache store (file, database, redis, memcached, etc.)
# CACHE_PREFIX=                   # Cache key prefix

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1          # Memcached host

# Redis Configuration
REDIS_CLIENT=phpredis              # Redis client (phpredis or predis)
REDIS_HOST=127.0.0.1              # Redis host
REDIS_PASSWORD=null               # Redis password
REDIS_PORT=6379                   # Redis port

# Mail Configuration
MAIL_MAILER=log                   # Mail driver (smtp, sendmail, mailgun, ses, postmark, log, array)
MAIL_SCHEME=null                  # Mail scheme (null, ssl, tls)
MAIL_HOST=127.0.0.1               # Mail host
MAIL_PORT=2525                    # Mail port
MAIL_USERNAME=null                # Mail username
MAIL_PASSWORD=null                # Mail password
MAIL_FROM_ADDRESS="hello@example.com" # Default from address
MAIL_FROM_NAME="${APP_NAME}"     # Default from name

# AWS Configuration
AWS_ACCESS_KEY_ID=                # AWS access key ID
AWS_SECRET_ACCESS_KEY=            # AWS secret access key
AWS_DEFAULT_REGION=us-east-1      # AWS default region
AWS_BUCKET=                       # AWS S3 bucket name
AWS_USE_PATH_STYLE_ENDPOINT=false # Use path-style endpoint for S3

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"       # Application name for Vite

# Zimrate Specific Settings
# Add any custom settings required for Zimrate below

MEASUREMENT_ID=
MEASUREMENT_PROTOCOL_API_SECRET=

